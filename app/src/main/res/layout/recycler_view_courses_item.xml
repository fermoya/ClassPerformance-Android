<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/round_shape"
        android:padding="@dimen/recycler_view_courses_margin"
        android:layout_margin="@dimen/recycler_view_courses_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.fmoyader.classperformance.view.CourseTextView
            android:id="@+id/text_view_course"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textAlignment="center"
            android:maxLength="24"
            android:ellipsize="end"
            tools:text="English course"/>

    </RelativeLayout>

</FrameLayout>